@model User
@{
    ViewBag.Title = "Log In";
    Layout = "_LogLayout";
}

<div asp-validation-summary="All" >
    <div class="login-dialog">
        <form asp-action="Login" asp-controller="Account" method="post">
            <h2>Sign In</h2>
            <br />
            <label asp-for="UserName">Name: </label>
            <br />
            <input asp-for="UserName" />
            <br />
            <label asp-for="Password">Password: </label>
            <br />
            <input asp-for="Password" />
            <br />
            <button type="submit" style="background-color:#f1b03f;border-radius: 8px"><b>Sign In</b></button>
            <hr /> <span>New to BGame ?</span>
            <button type="submit" asp-action="Register" asp-controller="Account"> Sign Up</button>
        </form>
    </div>
</div>
