@model IEnumerable<GameItem>
@{
    ViewData["Title"] = "GameItemList";
}
    <h2>GameItemList</h2>
    @foreach (GameItem obj in Model)
    {
        <div class="content">
            <form>
                <img src="@Url.Content(@obj.Image)" style="width:650px" />
                <p><b>Game Name: </b>@obj.Name</p>
                <p><b>Game Price: </b>@obj.Price</p>
                <p><b>Stock Quantity: </b>@obj.Quantity</p>
                <p><b>For players above: </b>@obj.Age</p>
                @*<p><b>Game Time: </b>@obj.GameTime</p>*@
                <p><b>Players: </b>@obj.Players</p>
                <p>@obj.Description</p>
                <input type="hidden" name="Id" value="@obj.GameItemId" />
                <input type="submit" asp-action="GameDetail" asp-route-Id="@obj.GameItemId" value="View Game" class="w3-button w3-border w3-hover-black w3-round-xlarge w3-border-black">
            </form>
        </div>
    }


