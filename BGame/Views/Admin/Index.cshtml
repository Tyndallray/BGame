
@model IEnumerable<GameItem>
@{ViewBag.Title = "All Game Items"; Layout = "_AdminLayout.cshtml";}
<div style="float:right;">
    <button type="submit" class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("Index","Home")'">Back</button>
</div>
<table class="table table-striped table-bordered table-sm">

    <tr>
        <th class="text-right">ID</th>
        <th>GameName</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.GameItemId</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Price.ToString("C")</td>
            <td class="text-center">
                <form asp-action="DeleteItem" asp-controller="Admin" asp-route-pID="@item.GameItemId" method="post">
                    <a asp-action="Edit" asp-controller="Admin" class="btn btn-sm btn-warning" asp-route-pItemID="@item.GameItemId">Edit</a>
                    <input type="hidden" name="GameID" value="@item.GameItemId" />
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Game Item</a>
</div>