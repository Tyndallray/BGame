@model BGame.Models.GameItem
@{
    ViewData["Title"] = "GameDetail";
}

<div class="container">
    <div class="banner">
        <img src="~/images/@Model.Image"/>
    </div>
    <div class="content">
        <h2>@Model.Name</h2>
        <p>@Model.Price</p>
        <p>@Model.Description</p>
        <p>@Model.Age</p>
        @*<p>@Model.GameTime</p>*@
        <p>@Model.Players</p>
        <p>@Model.Quantity</p>
        <input type="button" value="Add to Cart" />

    </div>
</div>
